- area_interest ||= @area_interest

%tbody.brain-damage-list-item-wrapper
  %tr.brain-damage-list-item{ :data => { :item => { :id => area_interest.id }}}
    %td= area_interest.area
    %td= area_interest.owner

    %td.brain-damage-actions-wrapper
      .brain-damage-actions
        = link_to area_interest do
          %i.eye.icon

        %a
          %i.brain-damage-edit.edit.icon

        = link_to area_interest, :method => :delete, :remote => true, :data => { :confirm => 'Are you sure?' }, :class => 'brain-damage-delete' do
          %i.trash.icon

  %tr.brain-damage-edit-list-item{ :data => { :item => { :for => area_interest.id }}}
    %td{ :colspan => 4 }
      = r 'table.item.form', :area_interest => area_interest
