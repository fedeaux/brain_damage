- id = bd_id
- trailing_form ||= false
- contact_roles ||= @contact_roles

.ui.two.column.grid.brain-damage-single-page-manager{ :id => id }
  .column
    %table.ui.table.brain-damage-table.brain-damage-list
      = r "table.header"

      - contact_roles.each do |contact_role|
        = r "table.item", { :contact_role => contact_role }

      - if trailing_form
        = r "table.form", :cancel_button => true

  .column
    = r "form"

  :javascript
    new BrainDamage.SinglePageManager("##{id}");
