- area = area || @area || Area.new

= form_for area, :html => { :class => 'ui form' }, :remote => true do |f|
  = r 'fields', :area => area, :f => f

  .actions
    - if area.persisted?
      = f.submit 'Save', :class => 'ui primary button'

    - else
      = f.submit 'Add', :class => 'ui primary button'
