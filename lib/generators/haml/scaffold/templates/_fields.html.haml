<% for attribute in attributes -%>
.field
  = f.label :<%= attribute.name %>
  = f.<%= attribute.field_type %> :<%= attribute.name %>

<% end -%>
.actions
  - if @<%= singular_table_name %>.persisted?
    = f.submit 'Save', :class => 'ui primary button'

  - else
    = f.submit 'Add', :class => 'ui primary button'
