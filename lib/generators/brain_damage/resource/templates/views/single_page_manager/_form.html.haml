- cancel_button ||= false
- <%= singular_table_name %> ||= @<%= singular_table_name %> || <%= name %>.new
- nested_on ||= nil

= form_for <%= singular_table_name %>, html: { :class => 'ui form' }, remote: true do |f|
  = r '<%= plural_table_name %>/fields', <%= singular_table_name %>: <%= singular_table_name %>, nested_on: nested_on, f: f

  .actions
    = f.submit 'Save', class: 'ui primary button'

    - if cancel_button
      .ui.basic.button.brain-damage-cancel Cancel
